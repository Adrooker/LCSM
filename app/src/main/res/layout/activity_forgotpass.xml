<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpass"
    android:orientation="vertical"
    android:background="#B2FFFF"
    android:padding="20dp">>



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/crop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Forgot Password"
        android:textSize="40dp"
        android:fontFamily="@font/carme"
        android:textColor="#3A55EA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your valid Email ID"
            android:fontFamily="@font/carme"
            android:textColorHint="#3A55EA"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carme"
                android:textColor="#3A55EA"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/otpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3A66EA"
        android:fontFamily="@font/carme"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="#fff" />

    <Button
        android:id="@+id/otpres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003A55EA"
        android:fontFamily="@font/carme"
        android:text="Return back to Sign up...?"
        android:textAlignment="center" />


</LinearLayout>